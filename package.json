{
  "name": "ecc-conveyor",
  "version": "1.4.4",
  "description": "ECC Conveyor: Codex-first engineering delivery engine with auditable patch/worktree workflow",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sumulige/ecc-conveyor.git"
  },
  "bugs": {
    "url": "https://github.com/sumulige/ecc-conveyor/issues"
  },
  "homepage": "https://github.com/sumulige/ecc-conveyor#readme",
  "bin": {
    "ecc": "./scripts/ecc.js"
  },
  "files": [
    "scripts/ecc.js",
    "scripts/ecc/*.js",
    "scripts/ecc/providers/",
    "scripts/ecc/fixtures/",
    "scripts/lib/",
    "crates/ecc-kernel/Cargo.toml",
    "crates/ecc-kernel/Cargo.lock",
    "crates/ecc-kernel/src/",
    "packs/",
    "schemas/",
    "prompts/ecc/",
    "docs/ecc.md",
    "docs/ecc-release.md",
    "docs/ecc-kernel-protocol.md",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "ecc:build-kernel": "cargo build --release --manifest-path crates/ecc-kernel/Cargo.toml",
    "ecc:install-kernel": "node scripts/ecc/install-kernel.js",
    "postinstall": "node scripts/ecc/install-kernel.js",
    "test": "node tests/run-all.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "globals": "^17.1.0",
    "markdownlint-cli": "^0.47.0"
  }
}
